@{
    Layout = null;
}

<head>


    <link rel="stylesheet" href="/fonts/themify-icons/themify-icons.css">
    <link href="~/css/styleai.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
