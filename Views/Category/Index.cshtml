<body>
    <div class="container">

        <h2>Danh Sách Danh Mục</h2>

        <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addModal">
            Add Category
        </button>

        @* Hiển thị thông báo *@
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-info mt-3">@TempData["msg"]</div>
        }

        @* Bảng danh mục *@
        <table class="contact-table table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Tên Danh Mục Món Ăn </th>
                    <th scope="col" class="text-center">Tuỳ Chỉnh</th>
                </tr>
            </thead>
            <tbody id="categoryTableBody">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.CategoryName</td>
                            <td class="text-center" data-id="@item.Id" data-name="@item.CategoryName">
                                <button type="button" title="Delete">
                                    Xoá
                                </button>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">Không có dữ liệu danh mục.</td>
                    </tr>
                }
            </tbody>
        </table>



        @* Modal thêm danh mục *@
        <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <form action="/category/add" method="post" class="modal-content">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="addModalLabel">Thêm Danh Mục Món Ăn</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <label class="col-2 col-form-label" for="name">Name</label>
                            <div class="col-10">
                                <input class="form-control" type="text" name="categoryName" id="name">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>

        @* Modal xóa danh mục *@
        <div class="modal fade" id="delModal" tabindex="-1" aria-labelledby="delModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <form name="frmDel" method="post" action="/category/delete" class="modal-content">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="delModalLabel">Bạn có muốn xóa danh mục này không?</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Xóa danh mục: <strong id="categoryName"></strong></p>
                        <input type="hidden" name="id">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </div>
                </form>
            </div>
        </div>

        @* Nút về trang chủ *@
        <div class="mt-3">
            <button role="button" class="btn btn-warning" onclick="location.href='/home'">
                <span class="golden-text">Go to Homepage</span>
            </button>
        </div>
    </div>

    @* JavaScript *@
    <script>
        // Xử lý tìm kiếm danh mục
        function searchCategories() {
            const input = document.getElementById('search').value.toLowerCase();
            const rows = document.querySelectorAll('#categoryTableBody tr');

            rows.forEach(row => {
                const name = row.cells[1].textContent.toLowerCase();
                if (name.includes(input)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        // Xử lý modal xóa
        $('.fa-trash').click(function () {
            let id = $(this).closest('td').data('id');
            let name = $(this).closest('td').data('name');
            console.log('ID to delete:', id, 'Name:', name);
            $('form[name="frmDel"] input[name="id"]').val(id);
            $('#delModal #categoryName').text(name);
            $('#delModal').modal('show');
        });
    </script>
</body>