@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quên Mật Khẩu - CookAIfood</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            display: flex;
            height: 100vh;
            background-color: #fffdf9;
        }

        .left {
            flex: 1;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-template-rows: repeat(2, 1fr);
            gap: 5px;
            padding: 10px;
            background-color: #F2C53D;
            height: 100vh;
        }

        .left img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 8px;
        }

        .right {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #fffefc;
            padding: 40px;
            box-shadow: -4px 0 10px rgba(0, 0, 0, 0.05);
            max-width: 50vw;
            height: 100vh;
        }

        .form-box {
            width: 100%;
            max-width: 350px;
        }

        h2 {
            font-size: 28px;
            margin-bottom: 20px;
            color: #2d2d2d;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-size: 14px;
            color: #2d2d2d;
            margin-bottom: 5px;
        }

        input[type="email"] {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #F2B950;
            border-radius: 6px;
            font-size: 14px;
        }

        .text-danger {
            color: #D95F18;
            font-size: 12px;
        }

        button {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 6px;
            background-color: #4B7322;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #D9933D;
        }

        .privacy {
            margin-top: 10px;
            font-size: 12px;
            color: #6e4b1f;
            text-align: center;
            display: block;
        }

        .switch-link {
            font-size: 13px;
            color: #D95F18;
            text-align: center;
            cursor: pointer;
            margin-top: 15px;
            display: block;
        }

        .logo {
            text-align: center;
            margin-bottom: 20px;
        }

        .logo img {
            width: 150px;
        }
    </style>
</head>

<body>
    <div class="left">
        <img src="https://phongvu.vn/cong-nghe/wp-content/uploads/2020/10/Meo-chup-anh-do-an-nhu-food-blogger.jpg"
            alt="Món ăn 1">
        <img src="https://images.squarespace-cdn.com/content/v1/53883795e4b016c956b8d243/1550052451758-LL5DACGHWUM1MEAI6HOA/chup-anh-mon-an-com-ga-thuong-hai-8.jpg"
            alt="Món ăn 2">
        <img src="https://jaybranding.com/wp-content/uploads/2023/05/chup-anh-thuc-an-food-photography-22.jpg"
            alt="Món ăn 3">
        <img src="https://spicyfoodstudio.com/wp-content/uploads/2023/03/chup-anh-do-an-01.jpg" alt="Món ăn 4">
        <img src="https://static.vinwonders.com/production/vietnam-food-tourism-2.jpg" alt="Món ăn 5">
        <img src="https://chuphinhmonan.com/wp-content/uploads/2017/03/avalon-1.jpg" alt="Món ăn 6">
    </div>
    <div class="right">
        <form method="post" action="/Account/otppassword" class="form-box" id="otp-form">
            @Html.AntiForgeryToken()
            <h2 style="padding-left: 35px ;">Quên Mật Khẩu</h2>
            <p style="font-size: 14px; color: #2d2d2d; margin-bottom: 20px;">
                Nhập email của bạn để nhận mã OTP qua email.
            </p>
            <div class="form-group">
                <input type="email" id="email" name="email" placeholder="Nhập email của bạn" required />
                <span class="text-danger" id="email-error"></span>
            </div>
            <button type="submit">Gửi Mã OTP</button>
            <a class="privacy" href="/Contact/Contact">Mọi thắc mắc xin liên hệ Admin</a>
            <a class="switch-link" href="/Account/Login">Trở về đăng nhập</a>
            <a class="switch-link" href="/Account/Register">Chưa có tài khoản? Đăng ký</a>
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script>
        $(ot).ready(function () {
            $("#otp-form").validate({
                rules: {
                    email: {
                        required: true,
                        email: true
                    }
                },
                messages: {
                    email: {
                        required: "Vui lòng nhập email.",
                        email: "Email không hợp lệ."
                    }
                },
                errorElement: "span",
                errorPlacement: function (error, element) {
                    error.appendTo("#email-error");
                }
            });
        });
    </script>
</body>

</html>